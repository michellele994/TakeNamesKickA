<div class = "col-md-4">
	<h2>Take a Name</h2>
	<form class = "create-form">
		<div class = "form-group">
			<label for = "ass_name">Enter Name: </label>
			<input type = "text" id="ass_name" name="name">
		</div>
		Choose a Picture
		<div class ="row">
			<div class="form-check form-check-inline" id="choose-picture">
				<div class="row text-center" id ="pic-choices">
					<div id = "pic-choices">
					</div>
				</div>
			</div>
		</div>
		<button type="submit">Take Name</button>
	</form>
</div>
<div class = "col-md-4">
	<h2>Names Taken</h2>
	<div class="row">
		<ul>
			{{#each asses}}
				{{#unless ass_kicked}}
					<div class="col-sm-3 ass-kicked-pic">
						{{> asses/ass-block ass_kicked=true}}
					</div>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
</div>
<div class = "col-md-4">
	<h2>Asses Kicked</h2>

	<ul>
		{{#each asses}}
			{{#if ass_kicked}}
				<div class = "col-sm-3">
					<img src="/assets/img/{{ass_picture}}kicked.png">
					{{ass_name}}
				</div>
			{{/if}}
		{{/each}}
	</ul>
</div>